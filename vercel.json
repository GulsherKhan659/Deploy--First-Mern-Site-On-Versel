{
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "build/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "source": "/(.*)",
            "destination": "build/index.html"
        },
        {
            "source": "/(.+)",
            "destination": "build/$1"
        }
    ]
}