{
    "version": 2,
    "name": "mern-app",
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "build/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "build/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "index.js"
        }
    ]
}